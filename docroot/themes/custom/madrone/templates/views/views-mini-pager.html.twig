{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
  <nav class="pager" role="navigation" aria-labelledby="{{ heading_id }}">
    <h4 id="{{ heading_id }}" class="pager__heading visually-hidden">{{ 'Pagination'|t }}</h4>
    <ul class="pager__items js-pager__items pagination justify-content-center">
      {% if items.previous %}
        <li class="pager__item pager__item--previous page-item">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}"
             rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }} class="page-link">
            <span class="visually-hidden">{{ 'Previous page'|t }}</span>
            <span aria-hidden="true">{{ items.previous.text|default('‹‹'|t) }}</span>
          </a>
        </li>
      {% endif %}
      {% if items.current %}
        <li class="pager__item is-active page-item disabled active">
          <span class="page-link">
            {% trans %}
              Page {{ items.current }}
            {% endtrans %}
          </span>
        </li>
      {% endif %}
      {% if items.next %}
        <li class="pager__item pager__item--next page-item">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}"
             rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }} class="page-link">
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
            <span aria-hidden="true">{{ items.next.text|default('››'|t) }}</span>
          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
